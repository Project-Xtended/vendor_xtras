<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:alpha="?android:disabledAlpha" android:state_checked="true" android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="10dp" android:gravity="fill_horizontal|center" android:top="10dp">
                <shape android:shape="rectangle" android:tint="?android:colorControlActivated">
                    <solid android:color="?android:colorControlActivated"/>
                    <size android:height="18.0dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:alpha="?android:disabledAlpha" android:state_checked="false" android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="10dp" android:gravity="fill_horizontal|center" android:top="10dp">
                <shape android:shape="rectangle" android:tint="@*android:color/switch_track_material">
                    <solid android:color="@*android:color/switch_track_material"/>
                    <size android:height="18.0dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="10dp" android:gravity="fill_horizontal|center" android:top="10dp">
                <shape android:shape="rectangle" android:tint="?android:colorControlActivated">
                    <solid android:color="?android:colorControlActivated"/>
                    <size android:height="18.0dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:bottom="10dp" android:gravity="fill_horizontal|center" android:top="10dp">
                <shape android:shape="rectangle" android:tint="@*android:color/switch_track_material">
                    <solid android:color="@*android:color/switch_track_material"/>
                    <size android:height="18.0dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
